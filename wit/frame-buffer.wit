package wasi:webgpu;

interface frame-buffer {
    use graphics-context.{context, buffer as context-buffer};

    resource device {
        constructor();

        connect-graphics-context: func(context: borrow<context>);
    }

    resource buffer {
        from-graphics-buffer: static func(buffer: context-buffer) -> buffer;

        // TODO: This should be replcated with something that doesn't require a copy.
        get: func() -> list<u8>;
        set: func(val: list<u8>);
    }
}
